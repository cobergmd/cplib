# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[CMakeLists.txt]
indent_style = space
indent_size = 4
max_line_length = 80

[*.{c,h,cpp,hpp}]
indent_size = 2
